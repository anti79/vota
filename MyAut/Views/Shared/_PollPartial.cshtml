@{
}
@using MyAut.Models 
@model Poll


<div class="card mb-3">
	<h1 class="card-header">@Model.Name</h1>
	<div class="row g-0">
		@if (Model.Image != null)
		{
			<div class="col-md-4">
				<img src="..." class="img-fluid rounded-start" alt="...">
			</div>
		}
		<div class="col-md-8">
			<div class="card-body">
				<p class="card-text">@Model.Description</p>
				

			</div>

		</div>

	</div>
	<div class="text-right mb-3 mr-3">
		<a href="/Polls/Vote/@Model.Id" class="btn btn-primary">Проголосовать</a>
	</div>
</div>