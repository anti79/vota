@model MyAut.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
	<div asp-validation-summary="ModelOnly"></div>
	<div>
		<label asp-for="Phone" class="form-label"></label><br />
		<input asp-for="Phone" class="form-control"/>
		<span asp-validation-for="Phone"></span>
	</div>
	<div>
		<label asp-for="Username" class="form-label"></label><br />
		<input asp-for="Username" class="form-control" />
		<span asp-validation-for="Username"></span>
	</div>
	<div>
		<label asp-for="Password" class="form-label"></label><br />
		<input asp-for="Password" class="form-control" />
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<label asp-for="PasswordConfirm" class="form-label"></label><br />
		<input asp-for="PasswordConfirm" class="form-control" />
		<span asp-validation-for="PasswordConfirm"></span>
	</div>
	<div class="mt-3">
		<input type="submit" value="Регистрация" class="btn btn-primary"/>
	</div>
</form>